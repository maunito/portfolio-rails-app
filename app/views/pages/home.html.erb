
<div class="section first-section">
  <div class="d-flex black-and-white-container" id="greeting">
    <div id="left">
      <p class="noselect" id="he">HE</p>
    </div>
    <div id="right">
      <p class="llo disable-select"><span id="l">L</span><span id="lo">LO</span></p>
    </div>
  </div>
</div>

<div id="projects">
  <p>PROJECTS</p>
</div>


<div class="section" id="bavarian-section">
  <div class="videoWrapper d-flex">
    <h2>BAYERISCH!</h2>
    <div class="dflex icon-wrapper">
      <a href="https://github.com/maunito/foodblog" target="_blank"><i class="bi bi-github icon-github"></i></a>
      <a href="https://www.bayerisch.xyz" target="_blank"><i class="bi bi-link"></i></a>
    </div>
    <%= video_tag "foodblog.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "video" %>
  </div>
</div>

<div class="section container-fluid" id="finport-section">
  <h2>FINPORT</h2>
  <div class="dflex icon-wrapper">
    <a href="https://github.com/Maiermag/FINPORT" target="_blank"><i class="bi bi-github icon-github"></i></a>
    <a href="http://www.finport.fun" target="_blank"><i class="bi bi-link"></i></a>
  </div>
   

  <div class="row">
    <div class="col-sm">
      <div class="finport-image-container">
        <%= image_tag "manage_connections", style: 'height:400px;width:180px;border-radius:5px;'%>
        <!-- <p>Easily import your existing portfolios</p> -->
      </div>
    </div>
    <div class="col-sm">
      <div class="finport-image-container">
        <%= image_tag "import_portfolio", style: 'height:400px;width:180px;border-radius:5px;'%>
        <!-- <p>With your bank or trading platforms</p> -->
      </div>
    </div>
    <div class="col-sm">
      <div class="finport-image-container">
        <%= image_tag "graph", style: 'height:400px;width:180px;border-radius:5px;'%>
        <!-- <p>Built in graph shows performance</p> -->
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm">
      <div class="finport-image-container">
        <%= image_tag "investments", style: 'height:400px;width:180px;border-radius:5px;'%>
        <!-- <p>Check the performance of all your assets in one Place</p> -->
      </div>
    </div>
    <div class="col-sm">
      <div class="finport-image-container">
        <%= image_tag "sectors", style: 'height:400px;width:180px;border-radius:5px;'%>
        <!-- <p>Check how much you spent in the different sectors</p> -->
      </div>
    </div>
    <div class="col-sm">
      <div class="finport-image-container">
        <%= image_tag "drop_down", style: 'height:400px;width:180px;border-radius:5px;'%>
        <!-- <p>Nice and simple design to make it easy for beginners</p> -->
      </div>
    </div>  
  </div>

</div>